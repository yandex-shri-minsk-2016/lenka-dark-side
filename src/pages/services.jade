    form(action="services/:id" method="post")
        div
            span.label time
            input(type="text" id="orderTime" name="orderTime")
        div
            span.label id
            input(type="hidden" id="serviceId" name="serviceId" value="571b8aea4f6319ce591479db")
        input(type="submit" value="Submit")
