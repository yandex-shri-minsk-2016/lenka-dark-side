@import '../../stylus/vars.styl'

.session
    width 68%
    z-index 1
    height 200px
    // border 3px solid #ccc
    position relative
    margin 0 auto
    background #fff
    border 2px dashed border-offers
    border-radius 10px
    margin-bottom 30px
    
    
.session + .session 
    margin-top 30px

.session
    &:first-child
        margin-top 10px
    &:last-child
        margin-bottom 10px


.session__name
    width 50%
    font-size 1.2em
    margin-left 250px
    padding-top 20px
    border-bottom 1px solid border-offers

.session__dish
    width 50%
    margin-left 250px

.session__time
    width 7.3%
    font-size 1.6em
    margin-left 250px
    margin-bottom 10px

.session__controls
    margin-left 245px
    padding-bottom 10px

@media screen and (max-width: 1000px)
    .session
        height 350px

    .session__name, .session__dish
        width 65%
        margin 0 auto
        text-align center

    .session__time
        padding-top 10px
        width 13.7%
        margin 0 auto

    .session__controls
        width 70%
        margin 0 auto
        padding-top 15px
        padding-left 70px

@media screen and (max-width: 860px)

    .session__name, .session__dish
        width 75%

    .session__controls
        padding-left 16px

@media screen and (max-width: 740px)
    .session
        height 400px

    .session__controls
        width 90%
        padding-left 71px

@media screen and (max-width: 650px)
    .session__name, .session__dish
        font-size 1.1em

    .session__controls
        width 60%
        padding-left 0
        
    .session__time
        width 18.7%

@media screen and (max-width: 401px)
    .session__time
        width 30.9%

    .session__controls
        width 65%
        padding-left 12px