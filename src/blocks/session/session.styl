@import '../../stylus/vars.styl'

.session
    width 37%
    height 400px
    position relative
    margin 0 auto
    border 1px solid black
    background #fff
    
.session + .session 
    margin-top 30px

.session
    &:first-child
        margin-top 10px
    &:last-child
        margin-bottom 10px

.session__form
    width 100%
        
.session__edit
    width 42px
    height 30px
    position absolute
    left 0
    top 0

.session__delete
    width 42px
    height 30px
    position absolute
    top 0
    right 0
    
.session__info
    text-align center
    font-size 14pt

.session__dish
    width 50%
    margin-left 250px

.session__time
    width 100px
    position relative
    margin-top 30px
    left 50%
    margin-left -50px
    font-size 22pt
    margin-bottom 10px

.session__controls
    position relative
    width 90%
    margin 0 auto
    padding-bottom 10px
    
.session__subsribers_info, .session__look
    display inline-block
    font-size 9pt
    position absolute
    
.session__subsribers_info span
    color #de3163
    font-size 15pt
    font-weight bold
    
.session__subsribers_info
    left 10px

.session__look
    margin-top -10px
    right 10px
    

@media screen and (max-width: 1010px)
    session__controls
        width 150px
        margin 0 auto
//@media screen and (max-width: 860px)


@media screen and (max-width: 740px)
    .session
        height 400px

    .session__controls
        width 90%
        padding-left 71px

@media screen and (max-width: 650px)

    .session__controls
        width 60%
        padding-left 0
        
    .session__time
        width 18.7%

@media screen and (max-width: 401px)
    .session__time
        width 30.9%

    .session__controls
        width 65%
        padding-left 12px