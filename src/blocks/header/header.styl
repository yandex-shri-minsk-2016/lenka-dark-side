@import '../../stylus/vars.styl'

.header
  width 100%
  height 90px
  font-family main-font
  background-color #FFFFFF  
  position relative
  border-bottom 3px solid buttons

.header__logo
  width 90px
  height 90px
  background url(../images/food.svg) no-repeat
  background-size contain
  position: absolute
  left 30px
  top: 0

.header__slogan
  width 200px
  height 80px
  background url(../images/title1.png) no-repeat
  margin 0 0 0 97px
  position relative

.header__bell
  position: absolute
  width: 50px
  right:0
  top:0

.header__link-adminRoom
  margin-left 850px
  display block
  position absolute
  top 30px
  text-decoration none
  &:hover
    color buttons
.header__button
  width 16%
  margin-left 982px
  margin-top -74px


@media screen and (max-width:1200px)
  .header__link-adminRoom
    margin-left 650px
  .header__button
    margin-left 772px

@media screen and (max-width:1000px)
  .header__link-adminRoom
    margin-left 450px
  .header__button
    margin-left 542px

@media screen and (max-width:950px)
  .header
    height 180px
  .header__block
    width 45%
    position relative
    margin 0 auto
  .header__link-adminRoom
    margin-top 100px
    margin-left 0
  .header__button
    width 56%
    margin-left 102px
    margin-top 26px

@media screen and (max-width:803px)
  .header__block
    width 50%

@media screen and (max-width:703px)
  .header__block
    width 55%

@media screen and (max-width:401px)
  .header__block
    width 80%