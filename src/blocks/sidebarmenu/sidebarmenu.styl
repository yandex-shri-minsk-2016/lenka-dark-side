@import '../../stylus/vars.styl'

.sidebar-menu
    width 25%
    height 350px
    overflow hidden
    margin 0 auto
    background #fff
    border-radius 2px
    border 1px solid border-offers
    // box-shadow: inset (0 0 5px 0 rgba(229,229,229,1))
    overflow hidden
    float left

.sidebar-menu__title
    font-size 20px
    width 240px
    height 30px
    margin 8px 0 6px 5px
    display block



.sidebar-menu__list
    list-style none
    margin-left 5px

.sidebar-menu__elem
    float left
    width 245px

.sidebar-menu__elem + .sidebar-menu__elem
    margin-top 5px

.sidebar-menu__filter
    float left
    width 25px
    height 20px
    cursor pointer

.sidebar-menu__filter + .sidebar-menu_name
    cursor pointer

.sidebar-menu_name
    font-size 14px
    margin-top 10px

.sidebar-menu__filter:checked + .sidebar-menu_name
    font-size 14px
    color buttons

.sidebar-menu_comppage
    margin-top 15px


@media (max-width: 850px)
    .sidebar-menu_comppage
        display none

@media (max-width: 800px)
    .sidebar-menu
        width 70%
        float none
        margin 0 auto
        display block

@media screen and (max-width: 440px)
    .sidebar-menu
        width 70%

