@import '../../stylus/vars.styl'

.offers
    position relative
    float right
    width 71%
    height 250px
    border-radius 2px
    background #fffffe
    margin 0 auto
    border 1px solid border-offers
    &:hover
        .offers__title
            color buttons
            cursor pointer

.offers + .offers
    margin-top 30px

.offers__info
    margin 0 0 0 200px
    padding-top 30px

.offers__title
    margin -21px 0 0 144px
    font-size 1.25em

.offers__down-text
    margin-top 140px
    margin-left 146px
    height 35px
    width 60%
    color #000
    background-color #f8f9fb
    border-radius 3px
    box-shadow: inset (0 0 3px 0 rgba(229,229,229,1))
    overflow hidden

.offers__text
    font-size 0.75em
    padding 9px 0 0 9px
    text-align left

.hidden-class
    display none
/* 
Стили для offers блока на странице companypage
*/

.offers_company
    width 100%
    margin 0 auto




@media screen and (max-width: 1000px)
    .offers__down-text
        margin 0 auto

        height 50px

    .offers
        height 75%

    .offers__title
        width 30%
        height 40px
        margin 0 auto
        text-align center

    .offers__info
        margin 0 0 0 10px
        height 100%

    .offers_company
        height 67%

@media screen and (max-width: 800px)
    .offers
        margin-top 20px
        float none
        height 89%

    .offers__info
        padding-top 0

    .offers__down-text
        margin-top 30px
        height 70px

    .offers
        height 89%

    .offers_company
        height 520px


@media screen and (max-width: 480px)
    .offers__title
        margin-left 77px

@media screen and (max-width: 440px)

    .offers_company
        height 540px
        
    .offers__down-text
        margin-top 40px
