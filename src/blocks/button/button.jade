mixin button(content, mods, options)
    .button
        if options && options.iconsOnly
            button(class=mods)
                span.button__icon
                span.button__title=content
        else if options && options.href
            a.button__button(href=options.href, class=mods)
                span.button__icon
                span.button__title= content
        else if options && options.type && options.name && options.value
            button.button__button(class=mods, type=options.type, name=options.name, value=options.value)
                span.button__icon
                span.button__title= content
        else
            button.button__button(class=mods)
                span.button__icon
                span.button__title= content
