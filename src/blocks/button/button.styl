@import '../../stylus/vars.styl'

.button
  display inline-block
  text-decoration none
  text-align center
  font-weight bold
  margin 6px

.button__button
  border 0
  padding 15px 25px
  color buttons-text-color
  background buttons
  border-radius 4px
  text-decoration none
  font-weight normal
  font-size 1em
  height 49px
  &:hover
    background-color buttons-hover
  &:active
    background-color buttons-active

.button__icon
  display none
  padding-left 16px

.button_icon .button__icon
  display inline-block
  width 25px
  height 25px
  background-size 25px
  margin -6px

.button_icon-cart .button__icon
  background url(../../images/basket.png) 0 no-repeat
  background-size 25px

.button_icon-plus .button__icon
  background url(../../images/icon_plus.png) 0 no-repeat
  background-size 25px

.button__title
  padding 0

.button_icon-only .button__icon
  padding 0

.button_new-order
  position absolute
  top 30px
  right 120px


.button_not_active
  background buttons-non-active

.button_size-s .button__button
    padding 5px 10px

.button_size-m
    padding 0 20px
    height 20

.offers-plugin__button
  position absolute
  margin-top -10px
